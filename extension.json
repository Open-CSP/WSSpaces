{
  "name": "Pega Departmental Permissions",
  "version": "1.0",
  "namemsg": "pdp-extensionname",
  "url": "https://pega.com",
  "type": "other",
  "author": [
    "[https://mediawiki.org/wiki/User:Xxmarijnw Marijn van Wezel]"
  ],
  "descriptionmsg": "pdp-desc",
  "license-name": "MIT",
  "requires": {
    "MediaWiki": ">= 1.31.0",
    "extensions": {
      "Lockdown": "*"
    }
  },
  "MessagesDirs": {
    "PegaDepartmentalPermissions": [
      "i18n"
    ]
  },
  "ExtensionMessagesFiles": {
    "PegaDepartmentalPermissionsMagic": "i18n/PegaDepartmentalPermissions.i18n.php"
  },
  "AutoloadNamespaces": {
    "PDP\\": "src/"
  },
  "Hooks": {
    "SecuritySensitiveOperationStatus": "PDP\\PDPHooks::onSecuritySensitiveOperationStatus",
    "SkinBuildSidebar": "PDP\\PDPHooks::onSkinBuildSidebar",
    "LoadExtensionSchemaUpdates": "PDP\\PDPHooks::onLoadExtensionSchemaUpdates",
    "BeforeInitialize": "PDP\\PDPHooks::onBeforeInitialize",
    "CanonicalNamespaces": "PDP\\PDPHooks::onCanonicalNamespaces"
  },
  "SpecialPages": {
    "Permissions": "PDP\\Special\\SpecialPermissions",
    "AddSpace": "PDP\\Special\\SpecialAddSpace",
    "ManageSpace": "PDP\\Special\\SpecialManageSpace",
    "ArchivedSpaces": "PDP\\Special\\SpecialArchivedSpaces"
  },
  "AvailableRights": [
    "pdp-manage",
    "pdp-edit-core-namespaces",
    "pdp-edit-all-spaces"
  ],
  "GroupPermissions": {
    "sysop": {
      "pdp-manage": true,
      "pdp-edit-core-namespaces": true,
      "pdp-edit-all-spaces": false
    },
    "spacemaster": {
      "pdp-manage": true,
      "pdp-edit-all-spaces": true
    }
  },
  "ResourceModules": {
    "ext.pdp.SpecialPermissions": {
      "styles": "extensions/PegaDepartmentalPermissions/resources/styles/ext.pdp.SpecialPermissions.css"
    },
    "ext.pdp.Spaces": {
      "styles": "extensions/PegaDepartmentalPermissions/resources/styles/ext.pdp.Spaces.css"
    },
    "ext.pdp.Global": {
      "styles": "extensions/PegaDepartmentalPermissions/resources/styles/ext.pdp.Global.css"
    },
    "ext.pdp.Exception": {
      "styles": "extensions/PegaDepartmentalPermissions/resources/styles/ext.pdp.Exception.css"
    },
    "ext.pdp.SpecialPermissionsSuccess": {
      "scripts": "extensions/PegaDepartmentalPermissions/resources/scripts/ext.pdp.SpecialPermissionsSuccess.js",
      "position": "bottom",
      "messages": [
        "pdp-permissions-saved-successfully"
      ],
      "dependencies": [
        "mediawiki.util",
        "mediawiki.api"
      ]
    },
    "ext.pdp.AddSpaceSuccess": {
      "scripts": "extensions/PegaDepartmentalPermissions/resources/scripts/ext.pdp.AddSpaceSuccess.js",
      "position": "bottom",
      "messages": [
        "pdp-add-space-saved-successfully"
      ],
      "dependencies": [
        "mediawiki.util",
        "mediawiki.api"
      ]
    },
    "ext.pdp.ArchiveSpaceSuccess": {
      "scripts": "extensions/PegaDepartmentalPermissions/resources/scripts/ext.pdp.ArchiveSpaceSuccess.js",
      "position": "bottom",
      "messages": [
        "pdp-archive-space-saved-successfully"
      ],
      "dependencies": [
        "mediawiki.util",
        "mediawiki.api"
      ]
    },
    "ext.pdp.UnarchiveSpaceSuccess": {
      "scripts": "extensions/PegaDepartmentalPermissions/resources/scripts/ext.pdp.UnarchiveSpaceSuccess.js",
      "position": "bottom",
      "messages": [
        "pdp-unarchive-space-saved-successfully"
      ],
      "dependencies": [
        "mediawiki.util",
        "mediawiki.api"
      ]
    },
    "ext.pdp.SpecialManageSpaceSuccess": {
      "scripts": "extensions/PegaDepartmentalPermissions/resources/scripts/ext.pdp.SpecialManageSpaceSuccess.js",
      "position": "bottom",
      "messages": [
        "pdp-manage-space-saved-successfully"
      ],
      "dependencies": [
        "mediawiki.util",
        "mediawiki.api"
      ]
    }
  },
  "config": {
    "PDPValidRights": {
      "value": [
        "read",
        "edit",
        "delete",
        "move",
        "protect"
      ]
    },
    "PDPValidUserGroups": {
      "value": []
    },
    "PDPValidNamespaces": {
      "value": ["Main", "Media", "User", "Project", "File", "MediaWiki", "Template", "Help", "Category"]
    }
  },
  "LogTypes": [
    "space"
  ],
  "LogActionsHandlers": {
    "space/create": "LogFormatter"
  },
  "manifest_version": 2
}